<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BrightAccentColor">#CE90FF</Color>

    <LinearGradientBrush x:Key="PlannerBackground">
        <GradientStop Color="#CDF0EA" Offset="0"/>
        <GradientStop Color="#CDEEF0" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ThemeColor" Color="#CDF0EA"/>
    <SolidColorBrush x:Key="MainTextColor" Color="#797979"/>
    <SolidColorBrush x:Key="DarkAccentColor" Color="#007C67"/>
    <SolidColorBrush x:Key="BrightAccentColorBrush" Color="{ StaticResource BrightAccentColor }"/>

</ResourceDictionary>